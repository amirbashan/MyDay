{
  "name": "myday",
  "private": true,
  "author": "Amir Bashan",
  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "initialize": "npm install && npm run clean && lerna bootstrap",
    "dev": "lerna run dev",
